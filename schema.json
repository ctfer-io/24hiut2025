{
  "$defs": {
    "v1alpha1.ctfer.io_Dynamic": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "$id": "https://github.com/ctfer-io/ctfer/pkg/fs/api/v1alpha1/dynamic",
      "$ref": "#/$defs/v1alpha1.ctfer.io_Dynamic",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "attribution": {
          "type": "string"
        },
        "value": {
          "type": "integer"
        },
        "state": {
          "type": "string",
          "enum": [
            "visible",
            "hidden"
          ],
          "default": "hidden"
        },
        "connection_info": {
          "type": "string"
        },
        "requirements": {
          "properties": {
            "behavior": {
              "type": "string",
              "enum": [
                "hidden",
                "anonymized"
              ],
              "default": "hidden"
            },
            "prerequisites": {
              "items": {
                "type": "string"
              },
              "type": "array",
              "minItems": 1
            }
          },
          "additionalProperties": false,
          "type": "object",
          "required": [
            "behavior",
            "prerequisites"
          ]
        },
        "flags": {
          "items": {
            "oneOf": [
              {
                "properties": {
                  "text": {
                    "type": "string",
                    "description": "The flag textual content."
                  },
                  "case_sensitive": {
                    "type": "boolean",
                    "default": true
                  },
                  "type": {
                    "type": "string",
                    "enum": [
                      "static",
                      "regex"
                    ],
                    "default": "static"
                  }
                },
                "type": "object",
                "required": [
                  "text"
                ]
              },
              {
                "type": "string",
                "description": "The flag textual content."
              }
            ]
          },
          "type": "array"
        },
        "tags": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "topics": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "files": {
          "items": {
            "oneOf": [
              {
                "properties": {
                  "path": {
                    "type": "string",
                    "description": "The relative file path."
                  },
                  "location": {
                    "type": "string",
                    "description": "The URL location to serve the file on."
                  }
                },
                "type": "object",
                "required": [
                  "path"
                ]
              },
              {
                "type": "string",
                "description": "The relative file path."
              }
            ]
          },
          "type": "array"
        },
        "hints": {
          "items": {
            "oneOf": [
              {
                "properties": {
                  "text": {
                    "type": "string",
                    "description": "The hint textual content."
                  },
                  "cost": {
                    "type": "integer",
                    "description": "If defined, the numer of points removed to the user if unlocked."
                  },
                  "id": {
                    "type": "string",
                    "description": "The identifier of the hint, used to create a dependency graph."
                  },
                  "requirements": {
                    "items": {
                      "type": "string"
                    },
                    "type": "array",
                    "description": "Other hints to unlock before this one."
                  }
                },
                "type": "object",
                "required": [
                  "text"
                ]
              },
              {
                "type": "string",
                "description": "The hint textual content."
              }
            ]
          },
          "type": "array"
        },
        "decay": {
          "type": "integer"
        },
        "minimum": {
          "type": "integer"
        },
        "function": {
          "anyOf": [
            {
              "enum": [
                "linear",
                "logarithmic"
              ]
            },
            {
              "pattern": ".*"
            }
          ],
          "type": "string",
          "default": "linear"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "name",
        "description",
        "value",
        "state",
        "decay",
        "minimum",
        "function"
      ]
    },
