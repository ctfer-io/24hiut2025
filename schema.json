            }
          ],
          "type": "string",
          "default": "linear"
        },
        "scenario": {
          "oneOf": [
            {
              "properties": {
                "apiVersion": {
                  "type": "string",
                  "const": "v1alpha1",
                  "description": "The API version of the YAML schema."
                },
                "kind": {
                  "type": "string",
                  "const": "sdk.ctfer.io/manual",
                  "description": "The object kind of the YAML schema."
                },
                "spec": {
                  "$ref": "#/$defs/v1alpha1.sdk.ctfer.io_manual.spec",
                  "type": "object",
                  "description": "The specification for this scenario and apiVersion/kind combination."
                },
                "outputs": {
                  "$ref": "#/$defs/v1alpha1.sdk.ctfer.io_manual.outputs",
                  "type": "object",
